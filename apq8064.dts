/dts-v1/;

/ {
        model = "Qualcomm APQ8064";
        compatible = "qcom,apq8064-ifc6410", "qcom,apq8064";
	#address-cells = <1>;
	#size-cells = <1>;

        interrupt-parent = <&GIC>;

        memory {
                device_type = "memory";
                reg = < 0x80000000 0x40000000 >; /* For now enable 1GB RAM */
        };

	aliases {
                soc = &SOC;
                UART0 = &UART0;
	}

	SOC: a10 {
                #address-cells = <1>;
                #size-cells = <1>;
                compatible = "simple-bus";
                ranges;
                bus-frequency = <0>;

	        GIC: interrupt-controller@2000000 {
	                compatible = "arm,gic";
        	        interrupt-controller;
                	#interrupt-cells = <1>;
	                reg = < 0x02000000 0x1000 >,
        	              < 0x02002000 0x1000 >;
	        };

	        timer@200a000 {
        	        compatible = "qcom,kpss-timer", "qcom,msm-timer";
                	interrupts = <1 1 0x301>,
                        	     <1 2 0x301>,
	                             <1 3 0x301>;
        	        reg = <0x0200a000 0x100>;
                	clock-frequency = <27000000>,
	                                  <32768>;
        	        cpu-offset = <0x80000>;
        	};
                /* 12450000 */
                /* 12490000 */
                /* 1A240000 */
                /* 16240000 */
                /* 16340000 */
                /* 16540000 */
                /* 16640000 */

	        UART0: serial@16440000 {
                        status = "okay";
                        compatible = "ns16550";
        	        reg = <0x16240000 0x1000>;
                        reg-shift = <2>;
                        interrupts = <190>;
                        interrupt-parent = <&GIC>;
                        current-speed = <115200>;
//                        clock-frequency = < 24000000 >;
	        };
	}
        chosen {
                bootargs = "-v";
                stdin = "UART0";
                stdout = "UART0";
        };
};
